<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.willshuffyproject.githubusers_bfaasubmission2"
    tools:ignore="LockedOrientationActivity">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar.">
        <activity android:name="com.willshuffyproject.githubusers_bfaasubmission2.activity.DetailActivity"
            android:screenOrientation="sensorPortrait"
            android:fitsSystemWindows="true">

        </activity>
        <activity
            android:name="com.willshuffyproject.githubusers_bfaasubmission2.activity.SplashScreenActivity"
            android:screenOrientation="sensorPortrait"
            android:fitsSystemWindows="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.willshuffyproject.githubusers_bfaasubmission2.activity.MainActivity"
            android:screenOrientation="sensorPortrait"
            android:fitsSystemWindows="true">

        </activity>
    </application>

</manifest>