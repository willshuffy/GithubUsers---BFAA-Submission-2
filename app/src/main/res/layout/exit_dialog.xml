<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="@string/yakin__keluar"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_iya"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/pink_background"
        android:fontFamily="@font/montserrat_regular"
        android:shadowColor="@color/colorWhite"
        android:text="@string/iya"
        android:textColor="@color/colorWhite"
        android:textColorHighlight="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textColorLink="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_tidak"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog" />

    <Button
        android:id="@+id/btn_tidak"
        android:layout_width="72dp"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/blue_background"
        android:fontFamily="@font/montserrat_regular"
        android:shadowColor="@color/colorWhite"
        android:text="@string/tidak"
        android:textColor="@color/colorWhite"
        android:textColorHighlight="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textColorLink="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_iya"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog" />

</androidx.constraintlayout.widget.ConstraintLayout>